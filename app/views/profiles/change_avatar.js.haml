- if params[:crop_avatar]
  $('#flash').replaceWith("#{j (render 'layouts/box/flash')}")
  $('.menu').show();
  $('.container.stuff').html("#{j (render 'settings')}");
  new Behavior.Flash()
  new Behavior.Profile()
  new Behavior.Avatar()
- elsif flash[:error]
  $('#flash').replaceWith("#{j (render 'layouts/box/flash')}")
  new Behavior.Flash(6000)
  new Behavior.Profile()
  new Behavior.Avatar()
- else
  $('.menu').hide();
  $('.container.stuff').html("#{j (render 'crop_avatar')}");
  init_papercrop();
window.history.pushState('', '', "#{profile_path(u)}");
