.navbar
  .row.title
    %span.main-title Broken Rules (BETA VERSION)
  .row
    .four.columns.logo
      = link_to root_path, data: {push: true}, class: 'navbar-brand' do
        = image_tag 'logo.jpg', class: 'nav-logo'

    .eight.columns.nav-menu
      - if current_user
        = link_to root_path, data: {push: true}, title: 'Home' do
          = fa_icon 'home 2x', class: 'black-color'
        = link_to user_path(u), data: {push: true}, title: 'Profile' do
          = fa_icon 'user 2x', class: 'black-color'
        = link_to profile_path(u), data: {push: true}, title: 'Setting' do
          = fa_icon 'cog 2x', class: 'black-color'
        = link_to destroy_user_session_path, method: 'delete', title: 'Sign Out' do
          = fa_icon 'sign-out 2x', class: 'black-color'
      - else
        = link_to new_user_session_path, title: 'Sign In' do
          = fa_icon 'sign-in 2x', class: 'black-color'
