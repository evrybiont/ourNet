.container.navbar
  .row.gn-c
    %span.main-title Broken Rules (BETA VERSION)
  .row
    .four.columns.nav-logo-gn
      = link_to root_path, remote: true, class: 'navbar-brand' do
        = image_tag 'logo.jpg', class: 'nav-logo'

    .eight.columns.nav-menu.gn-r
      - if current_user
        = link_to root_path, remote: true, title: 'Home' do
          = fa_icon 'home 2x', class: 'black-color'
        = link_to profile_path(current_user), remote: true, title: 'Setting' do
          = fa_icon 'cog 2x', class: 'black-color'
        = link_to destroy_user_session_path, method: 'delete', title: 'Sign Out' do
          = fa_icon 'sign-out 2x', class: 'black-color'
      - else
        = link_to user_omniauth_authorize_path(:facebook) do
          = fa_icon 'facebook-square 2x', class: 'black-color'
