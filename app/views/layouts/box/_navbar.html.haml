.container.navbar
  .row.gn-c
    %span.main-title Ukraine Custom Culture (BETA VERSION)
  .row
    .four.columns.nav-logo-gn
      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'logo.jpg', class: 'nav-logo'

    .eight.columns.nav-menu.nav-auto-align
