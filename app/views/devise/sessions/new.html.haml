%h4 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login'}) do |f|
  .row
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'button three columns'
  .row
    = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'three columns'

  .row
    = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'three columns'

  - if devise_mapping.rememberable?
    .row.remember
      = f.check_box :remember_me
      = f.label :remember_me
  .row
    = f.submit 'Log in', class: 'three columns'

= render 'devise/shared/links'
