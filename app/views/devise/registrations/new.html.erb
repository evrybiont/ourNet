<h4>Sign up</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class='row'>
    <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'three columns' %>
  </div>

  <div class='row'>
    <%= f.email_field :email, autocomplete: 'off', placeholder: 'Email', class: 'three columns' %>
  </div>

  <div class='row'>
    <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'three columns' %>
  </div>

  <div class='row'>
    <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password Confirmation', class: 'three columns' %>
  </div>

  <div class='row'>
    <%= f.submit 'Sign up', class: 'three columns goldenrod' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
