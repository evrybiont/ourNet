<h4>Resend confirmation instructions</h4>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
  <%= devise_error_messages! %>
  <div class='row'>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'three columns', autocomplete: 'off' %>
  </div>
  <div class='row'>
    <%= f.submit 'Resend', class: 'three columns' %>
    <div class='u-cf'></div>
  </div>
  <div class='u-cf'></div>

<% end %>

<%= render 'devise/shared/links' %>
