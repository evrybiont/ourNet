<h4>Change your password</h4>

= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token

  .row
    = f.password_field :new_password, placeholder: 'New password', class: 'three columns', name: 'user[password]'

  .row
    = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password Confirmation', class: 'three columns'

  .row
    = f.submit 'Change', class: 'three columns'

= render 'devise/shared/links'
