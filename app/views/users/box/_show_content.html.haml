#detail_user.row
  .three.columns
    .avatar
      = display_avatar @user, false
    .data
      .name
        %h5= @user.name
      %hr
      .type
        = fa_icon 'user-secret', class: 'option'
        = @user.user_type
      - if @user.locality.present?
        .location
          = fa_icon 'map-marker', class: 'option'
          = @user.locality
      .email
        = fa_icon 'envelope', class: 'option'
        = @user.email
      .joined
        = fa_icon 'clock-o', class: 'option'
        = @user.created_at.strftime("Joined on %e %b %Y")
      %hr
      .activity.row.gn-c
        = link_to followers_user_path(@user), remote: true, class: 'link super' do
          %strong.count.super= @user.reload.followers_count
          %span.title.super Followers
        = link_to '#', remote: true, class: 'link super' do
          %strong.count.super 0
          %span.title.super Starred
        = link_to following_user_path(@user), remote: true, class: 'link super' do
          %strong.count.super= @user.reload.followees_count
          %span.title.super Following
      %hr
        .f-btn
          = follow_button('profile', nil, @user)


  .nine.columns.options
    Another content
