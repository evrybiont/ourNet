#people_content
  .row
    = link_to user_path(@user), data: {push: true} do
      = image_tag @user.avatar.url(:thumb)
    = link_to @user.name, user_path(@user), data: {push: true}
  %hr
  - step = 0

  - while @users[step]
    .row
      - 4.times do |i|
        - if @users[i + step].nil?
          - break
        = render partial: 'users/box/people', locals: {user: @users[i + step]}
      - step += 4
  = people_blank_content @users, type
